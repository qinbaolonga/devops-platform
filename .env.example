# 数据库配置
DATABASE_URL="mysql://evaadmin:evaDKS579<>?@localhost:60331/devops_platform"

# Redis 配置
REDIS_URL="redis://localhost:6379"

# JWT 配置
JWT_SECRET="your_jwt_secret_key_change_in_production_min_32_chars"
JWT_EXPIRES_IN="8h"

# 数据加密密钥 (32 字符)
ENCRYPTION_KEY="your_encryption_key_32_chars_long_change_this"

# 应用配置
NODE_ENV="development"
PORT=3000
FRONTEND_URL="http://localhost:5173"

# 邮件配置
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="noreply@example.com"
SMTP_PASSWORD="your_smtp_password"
SMTP_FROM="DevOps Platform <noreply@example.com>"

# 钉钉通知 (可选)
DINGTALK_WEBHOOK=""

# 企业微信通知 (可选)
WECHAT_WEBHOOK=""

# Ansible 配置
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_TIMEOUT=300

# 监控配置
METRICS_COLLECTION_INTERVAL=60
ALERT_CHECK_INTERVAL=30

# 日志配置
LOG_LEVEL="info"
LOG_MAX_FILES="30d"
LOG_MAX_SIZE="20m"

# 会话配置
SESSION_TIMEOUT="8h"
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION="15m"

# 文件上传配置
MAX_FILE_SIZE="2GB"
UPLOAD_DIR="./uploads"

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_DIR="./backups"
