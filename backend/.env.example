# DevOps Platform 后端配置示例
# 复制此文件为 .env 并修改配置

# 数据库连接
DATABASE_URL="mysql://username:password@localhost:3306/devops_platform"

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 配置
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 服务配置
PORT=3000
NODE_ENV=development

# CORS 配置
CORS_ORIGIN=*

# 加密密钥（用于加密存储的密码）
ENCRYPTION_KEY=your-32-character-encryption-key

# Ansible 配置（可选）
ANSIBLE_HOST_KEY_CHECKING=False
